<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/CSS/home.css" />
    <link rel="stylesheet" href="/CSS/main.css" />
    <link rel="stylesheet" href="/CSS/auth.css" />
    <link rel="stylesheet" href="/CSS/landing.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Nabla&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap"
      rel="stylesheet"
    /> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <title>Home</title>
  </head>
  <body>
    <%- include('partials/navbar'); %>
    <div class="landing-hero">  
            <% post.forEach( function(p)  { %>

              <div class="video">
                <a href="/video/<%=p._id%>">
                  <video src="<%= p.video_url.url %>" muted ></video>
                </a>
                <p style="color:rgb(238, 199, 199);"><%=p.title%></p>
                <a style="text-decoration:none;" href="profile/<%=p.user?._id%>">
                  <div style="display: flex ;margin-top: 10px;margin-bottom: 10px;">
                    <% if(p.user?.avatar?.url) {%>
                      <img
                      src="<%=p.user.avatar.url%>" 
                      alt=""
                    />
                    <%}%>
                    <%if(!p.user?.avatar?.url){%>
                      <img
                      src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"
                      alt=""
                      />
                    <%}%>
                   
                      <p style="margin-left: 5px"><%=p.user?.name%></p>
                      
                    </div> 
                </a>
                  <div style="color: white;" >
                   
                    <span style="text-decoration:underline;display: block; margin-top: 5px;">
                      <i style="margin-right:5px" class="bi bi-music-note"></i> 
                      <%=p.musicTitle%>
                    </span>
                  </div>
                  
                </div>

            <% }) %>
      </div>
      <div class="add-btn">
        <a href="/upload" style="text-decoration:none; color: antiquewhite;">
          <i class="bi bi-plus-circle"></i>
        </a>
      </div>
    </div> 
    <script src="/JS/Landing.js"></script>
  </body>
</html>
